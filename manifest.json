{
  "manifest_version": 3,
  "name": "Time-Saver Mode",
  "version": "1.0",
  "description": "Gently reminds you to stay focused by limiting time on distracting websites.",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
  {
    "resources": ["ding.mp3"],
    "matches": ["<all_urls>"]
  }
],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}
